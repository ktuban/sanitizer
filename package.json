{
  "name": "@ktuban/sanitizer",
  "version": "1.1.3",
  "description": "High-security, extensible sanitization engine with validators, security layers, diagnostics, and environment-aware configuration.",
  "license": "MIT",
  "author": {
    "name": "K Tuban",
    "url": "https://github.com/ktuban"
  },
  "funding": [
    {
      "type": "paypal",
      "url": "https://paypal.me/Khaliltuban"
    },
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/ktuban"
    }
  ],
  "private":false,
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json", 
    "build:types": "tsc -p tsconfig.types.json",
    "lint": "eslint . --ext .ts",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "start": "node ./dist/esm/index.js"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.4",
    "jsdom": "^28.0.0",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^27.0.0",
    "@types/safe-json-stringify": "^1.1.5",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "sanitization",
    "security",
    "validation",
    "xss",
    "sql-injection",
    "ssrf",
    "config",
    "schema",
    "validator",
    "backend",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ktuban/sanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/ktuban/sanitizer/issues"
  },
  "homepage": "https://github.com/ktuban/sanitizer#readme"
}
